<aside id="left-panel">
  <div class="container">
  <ul class="list-group">
    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">Puneet Arora</h5>
        <small>3 days ago</small>
      </div>
      <p class="mb-1">Lorem ipsum dolor sit amet.</small>
    </a>
    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
      <strong>All Contacts</strong>
      <span class="badge bg-primary rounded-pill">14</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
      <strong>Frequently Contacted</strong>
      <span class="badge bg-primary rounded-pill">2</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
      <strong>Find Duplicates</strong>
      <span class="badge bg-primary rounded-pill">1</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
      <strong>Favorites</strong>
      <span class="badge bg-primary rounded-pill">1</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
      <strong>Groups</strong>
      <span class="badge bg-primary rounded-pill">1</span>
    </li>
  </ul>
  </div>
</aside>

<main id="right-panel">
  <div class="container">
    <h1>Contacts:</h1>
    <form action="create" method="GET">
      <button id="create-button"><a><svg id="plus-svg" xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-person-fill-add" viewBox="0 0 16 16">
        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0Zm-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        <path d="M2 13c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Z"/>
      </svg></a></button>
    </form>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Details</th>
        </tr>
      </thead>
      <tbody id="contact-body">
        
<% for(contact of contacts) { %>
        <tr id="google-contact-<%=contact.id%>">
          <td scope="row"><%=contact.firstname%></td>
          <td><%=contact.lastname%></td>
          <td><%=contact.email%></td>
          <td><%=contact.phoneNumber %></td>
          <td><div class="dropdown">
            <a class="btn btn-secondary" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
              <svg id="see-more-btn" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
              </svg>
            </a>
          
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <li><a class="dropdown-item" href="/profile">details</a></li>

              <!-- modal -->
              <li>
                <!-- Button trigger modal -->
                <button type="button" class=" dropdown-item" data-toggle="modal" data-target="#example-<%=contact.id%>">
                  Edit
                </button>
              </li>
              <form action="/func/delete" method="POST" id="new-contact-form">
              <li>
                <input type="submit" style="background: transparent;border: none;text-align: center;margin-left:17px" value="Delete"></li>
                <input type="hidden" name="contact_id" value="<%=contact.id%>">
              </form>
              <li><a class="dropdown-item" href="#">More</a></li>
            </ul>
          </div>
        </td>
        </tr>
<%- include('edit.ejs') %>

     <% } %>
      </tbody>
    </table>
    <link rel="stylesheet" href="puneet.css">
  </div>



<script src="/js/home.js"></script>